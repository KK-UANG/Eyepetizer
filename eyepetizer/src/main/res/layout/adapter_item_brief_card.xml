<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="14dp"
    android:paddingEnd="14dp">

    <ImageView
        android:id="@+id/iv_brief"
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        android:scaleType="fitXY"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_brief_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginLeft="12dp"
        android:ellipsize="end"
        android:text="我的宝藏书架"
        android:textSize="14sp"
        app:layout_constraintBottom_toTopOf="@id/tv_brief_description"
        app:layout_constraintEnd_toEndOf="@id/tv_brief_description"
        app:layout_constraintStart_toEndOf="@id/iv_brief"
        app:layout_constraintTop_toTopOf="@id/iv_brief" />

    <TextView
        android:id="@+id/tv_brief_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="你曾是少年的青春时代"
        android:textColor="@color/colorTextSecondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_brief"
        app:layout_constraintEnd_toStartOf="@id/tvFollow"
        app:layout_constraintStart_toStartOf="@id/tv_brief_title"
        app:layout_constraintTop_toBottomOf="@id/tv_brief_title" />

    <TextView
        android:id="@+id/tvFollow"
        android:layout_width="44dp"
        android:layout_height="22dp"
        android:background="@drawable/shape_follow_radius_black_2dp_bg"
        android:gravity="center"
        android:text="+关注"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@id/iv_brief"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/iv_brief" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_marginTop="8dp"
        android:background="@color/gray"
        app:layout_constraintTop_toBottomOf="@id/iv_brief" />

</androidx.constraintlayout.widget.ConstraintLayout>
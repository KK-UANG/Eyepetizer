<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingStart="14dp"
    android:paddingEnd="14dp">

    <ImageView
        android:id="@+id/iv_video_card"
        android:layout_width="173dp"
        android:layout_height="100dp"
        android:background="@color/gray"
        android:layout_alignParentTop="true"
        android:layout_marginBottom="15dp"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/tv_video_play_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/iv_video_card"
        android:layout_alignRight="@id/iv_video_card"
        android:layout_alignBottom="@id/iv_video_card"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_4"
        android:background="@drawable/bg_tv_video_play_time"
        android:text="01.36"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/tv_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/iv_video_card"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_10"
        android:layout_toEndOf="@+id/iv_video_card"
        android:layout_toRightOf="@+id/iv_video_card"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="当病毒把人类隔离在家，大自然开始了狂欢"
        android:textSize="12sp"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/tv_video_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/tv_video_title"
        android:layout_alignLeft="@+id/tv_video_title"
        android:layout_alignBottom="@id/iv_video_card"
        android:layout_marginRight="@dimen/dp_4"
        android:layout_marginBottom="@dimen/dp_10"
        android:layout_toStartOf="@+id/btn_video_share"
        android:layout_toLeftOf="@+id/btn_video_share"
        android:text="#动画 / 开眼精选"
        android:textColor="@color/colorTextSecondary"
        android:textSize="12sp" />

    <ImageView
        android:id="@+id/btn_video_share"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_alignBottom="@id/iv_video_card"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="6dp"
        android:src="@drawable/ic_share_gray" />

</RelativeLayout>